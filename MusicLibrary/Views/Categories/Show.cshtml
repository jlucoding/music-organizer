<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using MusicLibrary.Models;

    <h3>Here are all the albums in this category:</h3>

    <ol>
    @foreach (Album album in @Model["albums"])
    {
      <li>
        <strong><a href='/categories/@Model["category"].Id/albums/@album.Id'>@album.Title</a></strong><br>
        <span>@album.Artist</span>
      </li>
    }
    </ol>

    <p><a href='/categories/@Model["category"].Id/albums/new'>Add a new item</a></p>
    <p><a href='/categories'>Return to category list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
    <form action='/categories/@Model["category"].Id/delete' method="post">
      <button type="submit" name="button">Delete this category</button>
    </form>
  </body>
</html>